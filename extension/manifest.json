{
  "manifest_version": 3,
  "name": "Amazon Review Sentiment Highlighter",
  "version": "1.1.0",
  "description": "Highlights Amazon reviews and shows sentiment analytics.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "View Sentiment Analytics"
  },
  "content_scripts": [
  {
    "matches": [
      "https://*.amazon.com/*",
      "https://*.amazon.co.uk/*",
      "https://*.amazon.in/*"
    ],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_idle"
  }
]
,
  "permissions": ["storage"]
}
